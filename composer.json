{
  "require": {
    "php": ">=7.2 <=8",
    "aristath/kirki": "^3.1",
    "brainmaestro/composer-git-hooks": "^2.8",
    "dusank/knapsack": "^10.0",
    "htmlburger/carbon-fields": "^3.1",
    "jjgrainger/posttypes": "^2.0",
    "laravel/helpers": "^1.2",
    "monolog/monolog": "^2.0",
    "nesbot/carbon": "^2.34",
    "php-di/php-di": "^6.1",
    "symfony/http-foundation": "^5.0",
    "timber/timber": "^1.16",
    "vlucas/phpdotenv": "^4.1",
    "yahnis-elsts/plugin-update-checker": "^4.9"
  },
  "require-dev": {
    "johnpbloch/wordpress-core": "^5.4",
    "roave/security-advisories": "dev-master",
    "vimeo/psalm": "^3.11"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "vendor/aristath/kirki/kirki.php",
      "src/app.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "cghooks": "vendor/bin/cghooks",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update",
    "pre-commit": [
      "echo committing as $(git config user.name)",
      "composer update --no-dev"
    ],
    "post-push": [
      "echo reverting composer to development",
      "composer update"
    ],
    "post-merge": [
      "composer update"
    ]
  }
}
